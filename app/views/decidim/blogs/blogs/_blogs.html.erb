<div class="row small-up-1 medium-up-3 card-grid">
  <% blogs.each do |blog| %>
    <div class="column">
      <article class="card card--blog">
        <div class="card__content">
          <%= link_to blog, class: "card__link" do %>
            <h5 class="card__title"><%= translated_attribute blog.title %></h5>
          <% end %>
          <%= render partial: "datetime", locals: { blog: blog } %>
          <%= sanitize blog_description(blog) %>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%#= decidim_paginate blogs, order_start_time: params[:order_start_time], scope_id: params[:scope_id] %>
